function IncreasePrice(price, day, maxday) {
    if (day%5==0) {
        if (day % 2 == 0) {
            price += 0.5;
        } else {
            price += 0.7;
        }
    } else if (day%8==0) {
        price += 0; 
    } else {
        if (day % 2 == 0 && day % 3 != 0) {
            price += 0.3;
        } else {
            price += 0.1;
        }
    }
    return price;
}
